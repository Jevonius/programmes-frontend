{%  if articles|length <= 0 %}
    <p class="note">
        Sorry there are no features for <a href="{{ path('find_by_pid', {'pid': programme.pid}) }}">{{ programme.getTitle() }}</a>
    </p>
{% else %}
    <div class="component">
        <ul class="grid-wrapper highlight-box-wrapper highlight-box-wrapper--grid">
            {% for article in articles %}
                <li class="grid 1/2@bpb1 1/3@bpb2 1/3@bpw 1/4@bpw2 1/4@bpe">
                    {{ ds2013('article', article) }}
                </li>
            {% endfor %}
        </ul>
    </div>

    <div class="component">
        {%- if paginatorPresenter -%}
            {{ ds2013_presenter(paginatorPresenter) }}
        {%- endif -%}
    </div>
{% endif %}
